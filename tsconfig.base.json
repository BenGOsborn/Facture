{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2017", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@facture/components": ["libs/components/src/index.ts"],
            "@facture/graphql": ["libs/graphql/src/index.ts"],
            "@facture/helpers": ["libs/helpers/src/index.ts"],
            "@facture/hooks": ["libs/hooks/src/index.ts"],
            "@facture/providers": ["libs/providers/src/index.ts"],
            "@facture/state": ["libs/state/src/index.ts"],
            "@facture/types": ["libs/types/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
